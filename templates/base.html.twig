<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Pokemon !{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/favicon.ico') }}"/>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link href="{{ asset('pages/css/main.css') }}" rel="stylesheet"/>
        
        {% block stylesheets %}
        {% endblock %}

    </head>
    <body>
            <div id="loader">
        <span class="lettre">C</span>
        <span class="lettre">H</span>
        <span class="lettre">A</span>
        <span class="lettre">R</span>
        <span class="lettre">G</span>
        <span class="lettre">E</span>
        <span class="lettre">M</span>
        <span class="lettre">E</span>
        <span class="lettre">N</span>
        <span class="lettre">T</span>
    </div>

    <nav class="menu-container">
        <!-- burger menu -->
        <input type="checkbox" aria-label="Toggle menu" />
        <span></span>
        <span></span>
        <span></span>

        <!-- logo -->
        <a href="/" class="menu-logo">
            <img src="{{ asset('images/pokeball.png') }}" alt="My Awesome Website"/>
        </a>

        <!-- menu items -->
        <div class="menu">
            <ul>
            <li>
                <a href="/">
                Home
                </a>
            </li>
            <li>
                <a href="/pokemon">
                Pokemon
                </a>
            </li>
            <li>
                <input type="text" id="search" size="40" placeholder="ID or name of your pokemon">
                <a id="go-search">
                    <input type="submit" value="" style="background-image: url({{ asset('images/input-search-bg.png') }});background-position: center;background-repeat: no-repeat;color: white;background-color: orange;">
                </a>
            </li>
            </ul>
        </div>        
    </nav>
        {% block body %}
        {% endblock %}
    </body>

    {% block javascripts %}
    {% endblock %}

    <script>
        document.addEventListener('keyup', logKey);

        function logKey(e) {
            let valeur = document.getElementById("search").value;
            let href = document.getElementById("go-search");
            href.setAttribute("href", "/pokemon/" + valeur );
            logKey(e);
        }
    </script>

</html>
