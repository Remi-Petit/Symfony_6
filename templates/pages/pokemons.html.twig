{# templates/lucky/number.html.twig #} 

{% extends "base.html.twig" %}

{% block stylesheets %}
    <link href="{{ asset('pages/css/pokemons.css') }}" rel="stylesheet"/>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('pages/js/app.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}

    <h1>Liste des Pok√©mon</h1>
    
    <div class="container">
        {% for pokemon in pokemons %}
        <a href="pokemon/{{ pokemon.name }}" class="pokemons">
            <div>
                <!-- IMAGE DU POKEMON -->
                <p>{{ pokemon.name }}</p>
            </div>
        </a>
        {% endfor %}
    </div>


    <script>
    const container = document.querySelector('.container');
    for (i = 0; i < container.children.length; i++) {
        container.children.item(i).classList.add(i+1);
        let image = document.createElement('img');
        image.src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/"+ (i+1) +".png";
        container.children.item(i).prepend(image);
    }
    </script>

{% endblock %}